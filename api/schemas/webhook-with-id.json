{
    "title": "Register Webhook",
    "description": "Register to receive updates via webhook",
    "type": "object",
    "allOf": [
        {
            "$ref": "webhook.json"
        },
        {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                  "description": "Webhook identifier",
                  "type": "string",
                  "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                }
            }
        }
    ]
}